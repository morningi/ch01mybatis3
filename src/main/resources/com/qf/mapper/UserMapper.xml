<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qf.mapper.UserMapper">
    <select id="getListBySearch" parameterType="user" resultType="user">
        select * from user
        <where>
            <if test="uname !=null">
                uname=#{uname}
            </if>
            <if test="upwd != null">
                and upwd=#{upwd}
            </if>
        </where>
    </select>

    <select id="getListBySearch2" parameterType="user" resultType="user">
        select * from user
        <where>
        <choose>
            <when test="uname !=null and uname !='' ">
                uname=#{uname}
            </when>
            <when test="upwd != null and upwd !=''">
                and upwd=#{upwd}
            </when>
            <otherwise>

            </otherwise>
        </choose>
        </where>
    </select>

    <update id="updateUser" parameterType="user">
        update user
        <!--set标签仅用于uodate语句-->
        <set>
            <if test="uname != null">
                uname=#{uname},
            </if>
            <if test="upwd != null">
                upwd=#{upwd}
            </if>
        </set>
            where uid=#{uid}
    </update>

    <!--collection表示循环的集合,值为list或者array
               item表示循环遍历的每一项
               open表示循环遍历时的起始符号
               close表示循环遍历后的结束符号
               sepatator表示循环各项的分隔符
               uid in (1,2,3,4,5)
           -->
    <select id="getListByIn" parameterType="java.util.ArrayList" resultType="user">
        select * from user
        <where>
            uid in
            <foreach collection="list" item="i" open="(" close=")" separator=",">
                #{i}
            </foreach>
        </where>
    </select>
    <select id="getListByIn2" resultType="user">
        select * from user
        <where>
            uid in
            <foreach collection="array" item="i" open="(" close=")" separator=",">
                #{i}
            </foreach>
        </where>
    </select>
    <select id="getListByIn3" resultType="user">
        select * from user
        <where>
            uid in
            <foreach collection="ids" item="i" open="(" close=")" separator=",">
                #{i}
            </foreach>
            <if test="uname!=null">
                and uname=#{uname}
            </if>
        </where>
    </select>
</mapper>  
    