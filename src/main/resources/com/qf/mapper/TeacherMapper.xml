<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qf.mapper.TeacherMapper">
    <!--关联映射查询两种方式
        1.嵌套查询映射,即查询到的结果再一一对应进行查询,映射成另外一个对象
        2.
    -->
    <resultMap id="teacherMap" type="teacher">
        <id column="tid" property="tid"></id>
        <result column="tname" property="tname"></result>
        <!--一对一或者一对多时-->
        <association property="course" javaType="course" column="cid" select="getCourse"></association>
    </resultMap>


    <select id="getTeacherAndCourseList" resultMap="teacherMap">
        select * from teacher
    </select>
</mapper>  
    